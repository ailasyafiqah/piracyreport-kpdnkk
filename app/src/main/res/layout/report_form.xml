<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="utem.workshop.piracyreport.MainActivity"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

    <EditText
        android:paddingRight="15dp"
        android:id="@+id/nameField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_field"
        android:drawableLeft="@drawable/ic_namecard_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName|textCapWords"
        android:paddingLeft="15dp"
        android:textColor="@color/ms_black"
        android:textColorHint="@color/ef_grey"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:paddingRight="15dp"
        android:id="@+id/emailField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_field"
        android:drawableLeft="@drawable/ic_emailcard_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="@color/ms_black"
        android:textColorHint="@color/ef_grey"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nameField" />

    <EditText
        android:focusable="false"
        android:paddingRight="15dp"
        android:id="@+id/typeField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_field"
        android:drawableLeft="@drawable/ic_selection_black_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Type"
        android:inputType="none"
        android:paddingLeft="15dp"
        android:textColor="@color/ms_black"
        android:textColorHint="@color/ef_grey"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/emailField" />

    <EditText
        android:paddingRight="15dp"
        android:id="@+id/brandField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_field"
        android:drawableLeft="@drawable/ic_branding_black_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Brand Name"
        android:inputType="textNoSuggestions"
        android:paddingLeft="15dp"
        android:textColor="@color/ms_black"
        android:textColorHint="@color/ef_grey"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/typeField" />

    <EditText
        android:id="@+id/descField"
        android:layout_width="0dp"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_field"
        android:drawableLeft="@drawable/ic_info_black_24px"
        android:drawablePadding="15dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLength="400"
        android:scrollHorizontally="false"
        android:maxLines="4"
        android:minLines="4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/ms_black"
        android:textColorHint="@color/ef_grey"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandField" />

</android.support.constraint.ConstraintLayout>
